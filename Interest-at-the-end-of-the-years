#include<iostream>
using namespace std;
int main(void)
{
int amount,year,a;
float interest_rate,amount1;
cout<<"Enter the initial amount:";
cin>>amount;
cout<<"Enter the number of year:";
cin>>year;
cout<<"Enter the interest rate:";
cin>>interest_rate;
for(a=1;a<=year;a=a+1)
{
amount1=amount+(amount*(interest_rate/100));
cout<<"At the end of "<< a<< " year:"<<amount1<<" rupees "<<"\n";
amount=amount1;
}
cout<<"At the end of "<<year<<" year"<<",you will have " <<amount1<<" rupees";
}
